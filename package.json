{
  "name": "teller-protocol-subgraph",
  "license": "MIT",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "build:ganache": "yarn prepare:ganache && graph build",
    "build:ropsten": "yarn prepare:ropsten && graph build",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ teller-protocol/teller-protocol",
    "create-local": "graph create --node http://127.0.0.1:8020/ teller-protocol/teller-protocol",
    "create-docker": "graph create --node http://$GRAPH_HOST:$GRAPH_PORT/ teller-protocol/teller-protocol",
    "remove-local": "graph remove --node http://127.0.0.1:8020/ teller-protocol/teller-protocol",
    "remove-docker": "graph remove --node http://$GRAPH_HOST:$GRAPH_PORT/ teller-protocol/teller-protocol",
    "deploy-local": "graph deploy --node http://127.0.0.1:8020/ --ipfs http://localhost:5001 teller-protocol/teller-protocol",
    "deploy-docker": "graph deploy --node http://$GRAPH_HOST:$GRAPH_PORT/ --ipfs http://$IPFS_HOST:$IPFS_PORT teller-protocol/teller-protocol",
    "prepare:ganache": "mustache config/ganache.json subgraph.template.yaml > subgraph.yaml",
    "prepare:ropsten": "mustache config/ropsten.json subgraph.template.yaml > subgraph.yaml",
    "deploy:ganache": "yarn remove-local; yarn prepare:ganache && yarn create-local && yarn build && yarn deploy-local",
    "deploy:ropsten": "yarn prepare:ropsten && yarn build && yarn deploy",
    "deploy:docker": "yarn remove-docker; yarn prepare:ganache && yarn create-docker && yarn deploy-docker"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.18.0",
    "@graphprotocol/graph-ts": "0.18.1",
    "mustache": "^4.0.1"
  }
}
