{
  "name": "events-listener",
  "license": "MIT",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ salazarguille/zero-collateral",
    "create-local": "graph create --node http://127.0.0.1:8020/ salazarguille/zero-collateral",
    "remove-local": "graph remove --node http://127.0.0.1:8020/ salazarguille/zero-collateral",
    "deploy-local": "graph deploy --node http://127.0.0.1:8020/ --ipfs http://localhost:5001 salazarguille/zero-collateral",

    "prepare:ganache": "mustache config/ganache.json subgraph.template.yaml > subgraph.yaml",
    "prepare:ropsten": "mustache config/ropsten.json subgraph.template.yaml > subgraph.yaml",
    
    "deploy:ganache": "yarn remove-local; yarn prepare:ganache && yarn create-local && yarn build && yarn deploy-local",
    "deploy:ropsten": "yarn prepare:ropsten && yarn build && yarn deploy"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.18.0",
    "@graphprotocol/graph-ts": "0.18.1",
    "mustache": "^4.0.1"
  }
}
